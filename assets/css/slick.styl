.slick-slider
  position relative
  display block
  box-sizing border-box
  user-select none
  touch-callout none
  touch-action pan-y
  tap-highlight-color transparent
  &.slick-track
  &.slick-list
    transform translate3d(0, 0, 0)
  &.slick-dotted
    margin-bottom 30px

.slick-list
  position relative
  display block
  overflow hidden
  margin 0
  padding 0
  &:focus
    outline none
  &.dragging
    cursor pointer
    cursor hand
  &.loading
    background-image url(../img/loading.gif)
    background-repeat no-repeat
    background-position center

.slick-prev
.slick-next
  z-index 1
  position absolute
  display block
  line-height 0
  font-size 0
  cursor pointer
  background transparent
  color transparent
  padding 0
  border none
  outline none
  top 50%
  transform translate(0, -50%)
  &:before
    background-color black
    display block
    width 36px
    height @width
    line-height @height
    text-align center
    color white
    font-size 12px
  &:hover
  &:focus
    outline none
    background transparent
    color transparent
    &:before
      opacity 1
  &.slick-disabled
    &:before
      opacity .5

.slick-prev
  left -20px
  &:before
    content '←'
.slick-next
  right 0
  &:before
    content '→'

.slick-track
  position relative
  top 0
  left 0
  display block
  margin-left auto
  margin-right auto
  &:before
  &:after
    display table
    content ''
  &:after
    clear both

.slick-loading .slick-track
  visibility hidden

.slick-slide
  display none
  float left
  height 100%
  min-height 1px
  img
    display block
  &.slick-loading img
    display none
  &.dragging img
    pointer-events none

.slick-initialized .slick-slide
  display block
.slick-loading .slick-slide
  visibility hidden
.slick-vertical .slick-slide
  display block
  height auto
  border 1px solid transparent
.slick-arrow.slick-hidden
  display none

[dir='rtl']
  .slick-slide
    float right

.slick-dots
  position absolute
  bottom -25px
  list-style none
  display block
  text-align center
  padding 0
  margin 0
  width 100%
  li
    position relative
    display inline-block
    height 20px
    width @height
    margin 0 5px
    padding 0
    cursor pointer
    button
      border 0
      background transparent
      display block
      height 20px
      width @height
      outline none
      line-height 0
      font-size 0
      color transparent
      padding 5px
      cursor pointer
      &:hover
      &:focus
        outline none
        &:before
          opacity 1
      &:before
        position absolute
        top 0
        left 0
        content '⬤'
        width 20px
        height @width
        font-size 12px
        text-align center
        color white
        opacity .5
      &.slick-active
        button:before
          color white
          opacity 1