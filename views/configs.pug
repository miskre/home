mixin enter-whitelist
  a.enter-whitelist(href=__l('whitelist') data-aos="fade-left" data-aos-duration="1000")
    case language
      when 'ru'
        | Белый список
      when 'es'
        | lista blanca
      when 'zh'
        | 进入白名单
      when 'ja'
        | ホワイトリスト
      when 'ko'
        | 허용 목록에 입력
      when 'de'
        | geben sie whitelist
      default
        | enter whitelist

mixin social-links
  if links.twitter
    a(target="_blank" href=links.twitter)
      img(src="/assets/img/twitter.svg")
  if links.facebook
    a(target="_blank" href=links.facebook)
      img(src="/assets/img/facebook.svg")
  if links.medium
    a(target="_blank" href=links.medium)
      img(src="/assets/img/medium.svg")
  if links.telegram
    a(target="_blank" href=links.telegram)
      img(src="/assets/img/telegram.svg")
  if links.slack
    a(target="_blank" href=links.slack)
      img(src="/assets/img/slack.svg")

mixin google-analytic
  script(async src="https://www.googletagmanager.com/gtag/js?id=UA-89272419-1")
  script.
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'UA-89272419-1');

mixin language-modal
  .remodal.languages-modal(data-remodal-id="languages")
    .languages
      each name, code in supported
        a(href=__l('home', code) class=(code == language ? code + ' a' : code))= name

mixin hello-world
  #preload
    .text
      .progress
        img.mis(src="data:image/svg+xml;base64,")
        img.kre(src="data:image/svg+xml;base64,")
      case language
        when 'ru'
          span Привет_мир
        when 'es'
          span hola_mundo
        when 'zh'
          span 你好，世界
        when 'ja'
          span こんにちは世界
        when 'ko'
          span 안녕_세상
        when 'de'
          span hallo_welt
        default
          span hello_world