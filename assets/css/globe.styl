@keyframes pulse
  0%
    transform scale(1)
  50%
    opacity .5
  100%
    opacity 0
    transform scale(2)

.globe
  dotSize = 18px
  dotColor = white
  dotSizeLarge = dotSize * 1.5
  ul.globe-list
    margin 0
    padding 0
    list-style none
    font-size 0
    transition opacity 3s cubic-bezier(0.175, 0.885, 0.320, 1.275)
    opacity 0
    position absolute
    top 0
    left 0
    &.active
      opacity 1
      .text
        opacity 1
    .text
      position absolute
      right: dotSize + 8px
      top 50%
      display block
      font-size 10px
      font-weight bold
      text-transform uppercase
      letter-spacing 1px
      text-align right
      color white
      white-space nowrap
      transform translateY(-50%)
    > li
      position absolute
      margin-left: -(dotSize / 2)
      margin-top @margin-left
      width dotSize
      height @width
      background-image url(../img/mis.svg)
      background-repeat no-repeat
      background-size contain
      z-index 1
      &.active
        margin-left: -(dotSizeLarge / 2)
        margin-top @margin-left
        width dotSizeLarge
        height dotSizeLarge